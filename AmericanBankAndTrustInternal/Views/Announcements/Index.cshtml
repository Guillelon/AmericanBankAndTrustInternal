@model  IList<Services.DTOs.AnnouncementList>

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Announcements
        </h1>
    </div>
</div>
<div class="row">
    <div class="col-md-8">
        <div class="panel panel-default">
            <div class="panel-body">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                Date
                            </th>
                            <th>
                                Title
                            </th>
                            <th>

                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var element in Model)
                        {
                        <tr>
                            <td>
                                @element.CreationDate.ToShortDateString()
                            </td>
                            <td>
                                @element.Title
                            </td>
                            <td>
                                <div class="row">
                                    <div class="col-md-3">
                                    </div>
                                    <div class="col-md-3">
                                        <a href="/suspend/1" class="btn btn-default">
                                            Edit
                                        </a>
                                    </div>
                                    <div class="col-md-3">
                                        <a href="/suspend/1" class="btn btn-default">
                                            Delete
                                        </a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <span>New Announcement</span>
            </div>
            <div class="panel-body">
                <form>
                    <div class="form-group">
                        <label>Title</label>
                        <input type="text" class="form-control" placeholder="Title">
                    </div>
                    <div class="form-group">
                        <label>Text</label>
                        <textarea placeholder="Announcement Text" id="txtArea" rows="10" cols="70"></textarea>
                    </div>
                    <hr />
                    <button type="submit" class="btn btn-default" style="padding: 0px">Create Announcement</button>
                </form>
            </div>
        </div>
    </div>
</div>

